<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/rl_keyboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="9"
        android:gravity="center"
        android:orientation="vertical">

        <com.example.myapplicatio.util.MyImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_padlock" />

        <TextView
            android:id="@+id/tv_password_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:text="Enter Passcode"
            android:textSize="20dp" />

        <LinearLayout
            android:id="@+id/ll_pass_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp"
            android:orientation="horizontal">

            <View
                android:id="@+id/v_code_1"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_margin="4dp"
                android:background="@drawable/empty_dot" />

            <View
                android:id="@+id/v_code_2"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_margin="4dp"
                android:background="@drawable/empty_dot" />

            <View
                android:id="@+id/v_code_3"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_margin="4dp"
                android:background="@drawable/empty_dot" />

            <View
                android:id="@+id/v_code_4"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_margin="4dp"
                android:background="@drawable/empty_dot" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_btn_1"
                android:layout_width="0dp"
                android:layout_height="@dimen/password_view_size"
                android:layout_margin="@dimen/password_view_margin"
                android:layout_weight="1"
                android:clickable="true"
                android:orientation="vertical"
                android:tag="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="1"
                    android:textSize="@dimen/password_text_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/password_number_text_size" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_btn_2"
                android:layout_width="0dp"
                android:layout_height="@dimen/password_view_size"
                android:layout_alignParentTop="true"
                android:layout_margin="@dimen/password_view_margin"
                android:layout_toRightOf="@+id/ll_btn_1"
                android:layout_weight="1"
                android:clickable="true"
                android:orientation="vertical"
                android:tag="2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/ll_btn_2"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="2"
                    android:textSize="@dimen/password_text_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="ABC"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/password_number_text_size" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_btn_3"
                android:layout_width="0dp"
                android:layout_height="@dimen/password_view_size"
                android:layout_alignParentTop="true"
                android:layout_margin="@dimen/password_view_margin"
                android:layout_toRightOf="@+id/ll_btn_2"
                android:layout_weight="1"
                android:clickable="true"
                android:orientation="vertical"
                android:tag="3">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="3"
                    android:textSize="@dimen/password_text_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="DEF"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/password_number_text_size" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_btn_4"
                android:layout_width="0dp"
                android:layout_height="@dimen/password_view_size"
                android:layout_below="@+id/ll_btn_1"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_margin="@dimen/password_view_margin"
                android:layout_weight="1"
                android:clickable="true"
                android:orientation="vertical"
                android:tag="4">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="4"
                    android:textSize="@dimen/password_text_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="GHI"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/password_number_text_size" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_btn_5"
                android:layout_width="0dp"
                android:layout_height="@dimen/password_view_size"
                android:layout_below="@+id/ll_btn_2"
                android:layout_margin="@dimen/password_view_margin"
                android:layout_toEndOf="@+id/ll_btn_4"
                android:layout_toRightOf="@+id/ll_btn_4"
                android:layout_weight="1"
                android:clickable="true"
                android:orientation="vertical"
                android:tag="5">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="5"
                    android:textSize="@dimen/password_text_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="JKL"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/password_number_text_size" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_btn_6"
                android:layout_width="0dp"
                android:layout_height="@dimen/password_view_size"
                android:layout_below="@+id/ll_btn_3"
                android:layout_margin="@dimen/password_view_margin"
                android:layout_toEndOf="@+id/ll_btn_5"
                android:layout_toRightOf="@+id/ll_btn_5"
                android:layout_weight="1"
                android:clickable="true"
                android:orientation="vertical"
                android:tag="6">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="6"
                    android:textSize="@dimen/password_text_size" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="MNO"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/password_number_text_size" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_btn_7"
                android:layout_width="0dp"
                android:layout_height="@dimen/password_view_size"
                android:layout_below="@+id/ll_btn_4"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_margin="@dimen/password_view_margin"
                android:layout_weight="1"
                android:clickable="true"
                android:orientation="vertical"
                android:tag="7">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="7"
                    android:textSize="@dimen/password_text_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="PQRS"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/password_number_text_size" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_btn_8"
                android:layout_width="0dp"
                android:layout_height="@dimen/password_view_size"
                android:layout_below="@+id/ll_btn_5"
                android:layout_margin="@dimen/password_view_margin"
                android:layout_toEndOf="@+id/ll_btn_7"
                android:layout_toRightOf="@+id/ll_btn_7"
                android:layout_weight="1"
                android:clickable="true"
                android:orientation="vertical"
                android:tag="8">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="8"
                    android:textSize="@dimen/password_text_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="TUV"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/password_number_text_size" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_btn_9"
                android:layout_width="0dp"
                android:layout_height="@dimen/password_view_size"
                android:layout_below="@+id/ll_btn_6"
                android:layout_margin="@dimen/password_view_margin"
                android:layout_toEndOf="@+id/ll_btn_8"
                android:layout_toRightOf="@+id/ll_btn_8"
                android:layout_weight="1"
                android:clickable="true"
                android:orientation="vertical"
                android:tag="9">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="9"
                    android:textSize="@dimen/password_text_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="WXYZ"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/password_number_text_size" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/button11"
                android:layout_width="0dp"
                android:layout_height="@dimen/password_view_size"
                android:layout_below="@+id/ll_btn_7"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_margin="@dimen/password_view_margin"
                android:layout_weight="1"
                android:background="@drawable/ic_fingerprint_black_48dp"
                android:visibility="invisible" />

            <LinearLayout
                android:id="@+id/ll_btn_0"
                android:layout_width="0dp"
                android:layout_height="@dimen/password_view_size"
                android:layout_below="@+id/ll_btn_8"
                android:layout_margin="@dimen/password_view_margin"
                android:layout_toEndOf="@+id/button11"
                android:layout_toRightOf="@+id/button11"
                android:layout_weight="1"
                android:clickable="true"
                android:orientation="vertical"
                android:tag="0">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="0"
                    android:textSize="@dimen/password_text_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="+"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/password_number_text_size" />
            </LinearLayout>

            <ImageView
                android:id="@+id/ll_btn_remove"
                android:layout_width="0dp"
                android:layout_height="@dimen/password_view_size"
                android:layout_below="@+id/ll_btn_9"
                android:layout_margin="@dimen/password_view_margin"
                android:layout_toEndOf="@+id/ll_btn_0"
                android:layout_toRightOf="@+id/ll_btn_0"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:padding="12dp"
                android:src="@drawable/ic_delete" />


        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom|right"
        android:orientation="vertical">

        <com.example.myapplicatio.util.MyImageView
            android:id="@+id/my_finget_print"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_fingerprint_black_48dp" />

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|bottom"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:text="@string/cancel"
            android:layout_marginBottom="20dp"
            android:textSize="25sp" />
    </LinearLayout>
</LinearLayout>