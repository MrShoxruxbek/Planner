<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/space_20dp"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_donot_repeat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_refresh" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_weight="3"
            android:text="Does not repeat" />

        <ImageView
            android:id="@+id/iv_1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_tick" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_repeat_every_day"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:layout_weight="3"
            android:text="Repeat every day" />

        <ImageView
            android:id="@+id/iv_2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_tick"
            android:visibility="invisible" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_repeat_every_weel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:layout_weight="3"
            android:text="Repeat every Week" />

        <ImageView
            android:id="@+id/iv_3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_tick"
            android:visibility="invisible" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_repeat_every_month"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:layout_weight="3"
            android:text="Repeat every month" />

        <ImageView
            android:id="@+id/iv_4"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_tick"
            android:visibility="invisible" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_custom"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:layout_weight="3"
            android:text="Custom" />

        <ImageView
            android:id="@+id/iv_5"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_tick"
            android:visibility="invisible" />
    </LinearLayout>
</LinearLayout>